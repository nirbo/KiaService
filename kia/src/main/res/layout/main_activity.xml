<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_wood"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="org.nirbo.kiaservice.kia.MainActivity">

    <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollHorizontally="false"
            android:text="@string/title"
            android:textColor="@color/ThemeBackgroundGray"
            android:textSize="@dimen/text_medium3"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:textIsSelectable="false"

            android:shadowColor="@color/ThemeDarkRed"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10">
    </TextView>

    <ScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:requiresFadingEdge="vertical">

        <LinearLayout
            android:id="@+id/mainLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">

            <org.nirbo.kiaservice.kia.KiaServiceViews.KiaEditText
                android:id="@+id/fullNameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:saveEnabled="true"
                android:padding="5dp"
                android:background="@drawable/edittext_transition"
                android:hint="@string/fullName"
                android:textColorHint="@color/HintRed"
                android:textSize="@dimen/text_medium1"
                android:inputType="textFilter|textNoSuggestions"
                android:imeOptions="actionNext"
                android:layout_gravity="center"
                android:gravity="center"
                android:ellipsize="end"
                android:lines="1"
                android:cursorVisible="false"
                android:layout_marginTop="10dp">
            </org.nirbo.kiaservice.kia.KiaServiceViews.KiaEditText>

            <org.nirbo.kiaservice.kia.KiaServiceViews.KiaEditText
                android:id="@+id/emailET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:saveEnabled="true"
                android:padding="5dp"
                android:background="@drawable/edittext_transition"
                android:hint="@string/email"
                android:textColorHint="@color/HintRed"
                android:textSize="@dimen/text_medium1"
                android:inputType="textEmailAddress|textNoSuggestions"
                android:imeOptions="actionNext"
                android:layout_gravity="center"
                android:gravity="center"
                android:ellipsize="end"
                android:lines="1"
                android:cursorVisible="false"
                android:layout_marginTop="20dp">
            </org.nirbo.kiaservice.kia.KiaServiceViews.KiaEditText>

            <org.nirbo.kiaservice.kia.KiaServiceViews.KiaEditText
                    android:id="@+id/cellPhoneET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:saveEnabled="true"
                    android:padding="5dp"
                    android:background="@drawable/edittext_transition"
                    android:hint="@string/cellPhone"
                    android:textColorHint="@color/HintRed"
                    android:textSize="@dimen/text_medium1"
                    android:inputType="phone"
                    android:imeOptions="actionNext"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:lines="1"
                    android:cursorVisible="false"
                    android:layout_marginTop="20dp">
            </org.nirbo.kiaservice.kia.KiaServiceViews.KiaEditText>

            <org.nirbo.kiaservice.kia.KiaServiceViews.KiaEditText
                    android:id="@+id/carTypeET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:saveEnabled="true"
                    android:padding="5dp"
                    android:background="@drawable/edittext_transition"
                    android:hint="@string/carType"
                    android:textColorHint="@color/HintRed"
                    android:textSize="@dimen/text_medium1"
                    android:inputType="textFilter|textNoSuggestions"
                    android:imeOptions="actionNext"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:lines="1"
                    android:cursorVisible="false"
                    android:layout_marginTop="20dp">
            </org.nirbo.kiaservice.kia.KiaServiceViews.KiaEditText>

            <org.nirbo.kiaservice.kia.KiaServiceViews.KiaEditText
                android:id="@+id/departmentET"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:saveEnabled="true"
                android:textSize="@dimen/text_medium1"
                android:hint="@string/chooseDep"
                android:textColorHint="@color/HintRed"
                android:background="@drawable/edittext_transition"
                android:layout_gravity="center"
                android:gravity="center"
                android:editable="false"
                android:cursorVisible="false"
                android:layout_marginTop="20dp">
            </org.nirbo.kiaservice.kia.KiaServiceViews.KiaEditText>

            <org.nirbo.kiaservice.kia.KiaServiceViews.KiaEditText
                android:id="@+id/requestedServiceET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:saveEnabled="true"
                android:padding="5dp"
                android:background="@drawable/edittext_transition"
                android:hint="@string/requestedService"
                android:textColorHint="@color/HintRed"
                android:textSize="@dimen/text_medium1"
                android:inputType="textFilter|textMultiLine|textNoSuggestions|textCapSentences"
                android:imeOptions="actionNext"
                android:scrollbars="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:ellipsize="end"
                android:maxLines="5"
                android:maxLength="250"
                android:cursorVisible="false"
                android:layout_marginTop="20dp">
            </org.nirbo.kiaservice.kia.KiaServiceViews.KiaEditText>

            <org.nirbo.kiaservice.kia.KiaServiceViews.KiaEditText
                android:id="@+id/datePickET"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:saveEnabled="true"
                android:padding="5dp"
                android:textSize="@dimen/text_medium1"
                android:hint="@string/datePick"
                android:textColorHint="@color/HintRed"
                android:background="@drawable/edittext_transition"
                android:layout_gravity="center"
                android:gravity="center"
                android:editable="false"
                android:cursorVisible="false"
                android:layout_marginTop="20dp">
            </org.nirbo.kiaservice.kia.KiaServiceViews.KiaEditText>

            <org.nirbo.kiaservice.kia.KiaServiceViews.KiaEditText
                    android:id="@+id/timePickET"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:saveEnabled="true"
                    android:padding="5dp"
                    android:textSize="@dimen/text_medium1"
                    android:hint="@string/timePick"
                    android:textColorHint="@color/HintRed"
                    android:background="@drawable/edittext_transition"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:editable="false"
                    android:cursorVisible="false"
                    android:layout_marginTop="20dp">
            </org.nirbo.kiaservice.kia.KiaServiceViews.KiaEditText>

            <org.nirbo.kiaservice.kia.KiaServiceViews.KiaEditText
                    android:id="@+id/carTransportET"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:saveEnabled="true"
                    android:padding="5dp"
                    android:textSize="@dimen/text_medium1"
                    android:hint="@string/carTransport"
                    android:textColorHint="@color/HintRed"
                    android:background="@drawable/edittext_transition"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:editable="false"
                    android:cursorVisible="false"
                    android:layout_marginTop="20dp">
            </org.nirbo.kiaservice.kia.KiaServiceViews.KiaEditText>

            <org.nirbo.kiaservice.kia.KiaServiceViews.KiaEditText
                    android:id="@+id/commentsET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:saveEnabled="true"
                    android:padding="5dp"
                    android:background="@drawable/edittext_transition"
                    android:hint="@string/comments"
                    android:textColorHint="@color/HintRed"
                    android:textSize="@dimen/text_medium1"
                    android:inputType="textFilter|textMultiLine|textNoSuggestions|textCapSentences"
                    android:imeOptions="actionNext"
                    android:scrollbars="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:maxLines="8"
                    android:maxLength="400"
                    android:cursorVisible="false"
                    android:layout_marginTop="20dp">
            </org.nirbo.kiaservice.kia.KiaServiceViews.KiaEditText>

            <Button
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_selector"
                android:padding="5dp"
                android:text="@string/submitForm"
                android:textColor="@color/Black"
                android:textSize="@dimen/text_medium1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp">
            </Button>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
