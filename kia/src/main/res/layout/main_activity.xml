<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_wood"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="org.nirbo.kiaservice.kia.MainActivity">

    <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollHorizontally="false"
            android:text="@string/title"
            android:textColor="@color/ThemeBackgroundGray"
            android:textSize="@dimen/text_medium2"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:textIsSelectable="false">
    </TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">

            <org.nirbo.kiaservice.kia.KiaServiceViews.KiaEditText
                android:id="@+id/fullNameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/edittext_transition"
                android:hint="@string/fullName"
                android:textColorHint="@color/HintRed"
                android:textSize="@dimen/text_small"
                android:inputType="textFilter|textNoSuggestions"
                android:imeOptions="actionNext"
                android:layout_gravity="center"
                android:gravity="center"
                android:ellipsize="end"
                android:lines="1"
                android:cursorVisible="false">
            </org.nirbo.kiaservice.kia.KiaServiceViews.KiaEditText>

            <org.nirbo.kiaservice.kia.KiaServiceViews.KiaEditText
                android:id="@+id/emailET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/edittext_transition"
                android:hint="@string/email"
                android:textColorHint="@color/HintRed"
                android:textSize="@dimen/text_small"
                android:inputType="textEmailAddress|textNoSuggestions"
                android:imeOptions="actionNext"
                android:layout_gravity="center"
                android:gravity="center"
                android:ellipsize="end"
                android:lines="1"
                android:cursorVisible="false"
                android:layout_marginTop="20dp">
            </org.nirbo.kiaservice.kia.KiaServiceViews.KiaEditText>

            <org.nirbo.kiaservice.kia.KiaServiceViews.KiaEditText
                    android:id="@+id/cellPhoneET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="@drawable/edittext_transition"
                    android:hint="@string/cellPhone"
                    android:textColorHint="@color/HintRed"
                    android:textSize="@dimen/text_small"
                    android:inputType="phone"
                    android:imeOptions="actionNext"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:lines="1"
                    android:cursorVisible="false"
                    android:layout_marginTop="20dp">
            </org.nirbo.kiaservice.kia.KiaServiceViews.KiaEditText>

            <org.nirbo.kiaservice.kia.KiaServiceViews.KiaEditText
                    android:id="@+id/carTypeET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="@drawable/edittext_transition"
                    android:hint="@string/carType"
                    android:textColorHint="@color/HintRed"
                    android:textSize="@dimen/text_small"
                    android:inputType="textFilter|textNoSuggestions"
                    android:imeOptions="actionNext"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:lines="1"
                    android:cursorVisible="false"
                    android:layout_marginTop="20dp">
            </org.nirbo.kiaservice.kia.KiaServiceViews.KiaEditText>

            <org.nirbo.kiaservice.kia.KiaServiceViews.KiaEditText
                android:id="@+id/departmentET"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_small"
                android:hint="@string/chooseDep"
                android:textColorHint="@color/HintRed"
                android:background="@drawable/edittext_transition"
                android:layout_gravity="center"
                android:gravity="center"
                android:editable="false"
                android:cursorVisible="false"
                android:layout_marginTop="20dp">
            </org.nirbo.kiaservice.kia.KiaServiceViews.KiaEditText>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
