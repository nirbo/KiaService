<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_wood"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="org.nirbo.kiaservice.kia.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollHorizontally="false"
                android:text="@string/title"
                android:textColor="@color/ThemeBackgroundGray"
                android:textSize="@dimen/text_medium2"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp">
            </TextView>

            <org.nirbo.kiaservice.kia.EditTexts.KiaEditText
                android:id="@+id/fullNameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/edittext_transition"
                android:hint="@string/fullName"
                android:textColorHint="@color/HintRed"
                android:inputType="textFilter|textNoSuggestions"
                android:imeOptions="actionNext"
                android:layout_gravity="center"
                android:gravity="right"
                android:ellipsize="end"
                android:lines="1"
                android:cursorVisible="true">
            </org.nirbo.kiaservice.kia.EditTexts.KiaEditText>

            <org.nirbo.kiaservice.kia.EditTexts.KiaEditText
                android:id="@+id/emailET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/edittext_transition"
                android:hint="@string/email"
                android:textColorHint="@color/HintRed"
                android:inputType="textEmailAddress|textNoSuggestions"
                android:imeOptions="actionNext"
                android:layout_gravity="center"
                android:gravity="right"
                android:ellipsize="end"
                android:lines="1"
                android:cursorVisible="true">
            </org.nirbo.kiaservice.kia.EditTexts.KiaEditText>



        </LinearLayout>
    </ScrollView>
</LinearLayout>
